pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }


        stage('Deploy Application Locally') {
            steps {
                ansiblePlaybook(
                    playbook: 'deployment/ansible/deploy.yml',
                    inventory: 'deployment/ansible/hosts.ini'
                )
            }
        }
    }

    post {
        success {
            echo "Déploiement local terminé avec succès !"
        }
        failure {
            echo "Le déploiement local a échoué à se terminer." // j
            echo "Vérifiez les journaux pour plus de détails."
        }
    }
}
